<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_background_configuring"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Fila superior: Icono y estado de conexión -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Icono del tipo de dispositivo -->
            <ImageView
                android:id="@+id/widget_device_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_widget_settings" />

            <!-- Espaciador -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Estado de conexión -->
            <ImageView
                android:id="@+id/widget_connection_icon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_widget_settings" />

            <TextView
                android:id="@+id/widget_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configurando..."
                android:textColor="#666666"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Nombre del dispositivo (centro) -->
        <TextView
            android:id="@+id/widget_device_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="CaldenSmart"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Fila inferior: Tipo y estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toca para configurar"
                android:textColor="#757575"
                android:textSize="11sp" />

            <!-- Espaciador -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Indicador de encendido/apagado -->
            <TextView
                android:id="@+id/widget_power_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- Overlay de carga (ProgressBar) -->
    <FrameLayout
        android:id="@+id/widget_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/widget_progress_bar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="#4CAF50" />
    </FrameLayout>

</FrameLayout>